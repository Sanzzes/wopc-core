#!/bin/bash
# Ixilium Server
# autorestart Script

while :
do
	echo "IxiliumEmu daemon restarted"
	echo `date` >> crash.log &
	./world | tail -n 20 >> crash.log
	echo " " >> crash.log &
	pid=`ps ax | awk '($5 ~ /ixiemu/) { print $1 }'`
	wait $pid
        echo `date` ", IxiliumEmu daemon crashed and restarted." >> serverlog
done
